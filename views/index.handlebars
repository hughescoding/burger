<div class="bgImage">
	<div class="container">
		<div class="jumbotron bgcolor">
			<h1 class="text-center">Bikini Bottom Online</h1>
			<form class="text-center" action="/" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" id="burgerInput" name="name" placeholder="MMMMM Burgers...">
				</div>
				<button class="btn btn-default btn-danger" type="submit">Add to Order</button>

			</form>
		</div>
		<div class="row">
			<div class="col-lg-4 col-md-4 col-sm-4">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title text-center">Get Ready to Eat:</h3>
					</div>
					<div class="card-body">
						<ul class="list-group">
							{{#each burgers}}
							{{#unless this.devoured}}
							<li class="list-group-item">
								<p class="burger-type">{{this.name}}</p>
								<form class="pull-right" action="/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-danger" type="submit">Eat</button>
								</form>
							</li>
							{{/unless}}
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4">
				<div class="bgcolor card">
					<div class="card-header">
						<h3 class="card-title text-center">Sponsored by:</h3>
					</div>
					<div class="text-center">
						<img class="img-fluid" src="../assets/img/logo.jpeg" />
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title text-center">Belly Full of:</h3>
					</div>
					<div class="card-body">
						<ul class="list-group">
							{{#each burgers}}
							{{#if this.devoured}}
							<li class="list-group-item">
								<p class="burger-type">{{this.name}}</p>
								<form class="pull-right" action="/{{this.id}}?_method=DELETE" method="POST">
									<button class="btn btn-default btn-danger" type="submit">Empty</button>
								</form>
							</li>
							{{/if}}
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>